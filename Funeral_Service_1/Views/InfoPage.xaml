    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="243,67,0,0" TextWrapping="Wrap" Text="РИТУАЛЬНОЕ АГЕНТСТВО В КАЗАНИ —" FontSize="20" Foreground="#B53232" VerticalAlignment="Top" Width="395"/>
